{
	"env": {
		"browser": true,
		"es2021": true
	},
	"settings": {
		"import/resolver": {
			"typescript": {
				"project": "./server/tsconfig.json"
			}
		}
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"prettier/prettier": 2,
		"import/prefer-default-export": 0,
		"import/extensions": 0,
		"@typescript-eslint/no-unused-vars": 1,
		"no-console": 0,
		"no-multi-str": 0,
		"no-underscore-dangle": 0
	}
}
